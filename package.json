{
  "name": "doctors-token-system",
  "version": "1.0.0",
  "description": "Doctor Appointment System with GPS validation and email notifications",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-deps": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "setup-db": "cd backend && npm run init-db",
    "start": "cd backend && npm start"
  },
  "keywords": ["doctor", "appointment", "gps", "healthcare", "booking"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  }
}
